<div class="container mt-3 venue-section">
    <div class="row justify-content-center">
        <div class="event-card-info-window">
          <% if venue.events != nil %>
            <%= link_to venue_path(venue) do %>
              <%= cl_image_tag venue.photos[0].key, height:120, crop: :fill, class: "w-100" %>
            <% end %>
              <div class="card-trip-infos">
              <h3 class="mt-2"><%= link_to venue.name, venue_path(venue) %></h3>
              <h6><%= venue.events.last.name %></h6>
              <!--star ratings -->
              <div class="card-start d-flex align-items-center">

                <% full_stars = venue.events.last.average_rating.round %>
                <% empty_stars = 5 - full_stars %>
                <% full_stars.times do %>
                <i class="fa fa-star" aria-hidden="true"></i>
                <% end %>
                <% empty_stars.times do %>
                  <i class="far fa-star"></i>
                <% end %>
                 (<%= venue.events.last.ratings.count %>)
                <!-- iterate through users who are logged in -->
              <% elsif venue.events.nil? %>
                <%= cl_image_tag venue.photos[0].key, height:220, crop: :fill, class: "w-100" %>
                <h3><%= venue.name %></h3>
                <p>no event at the moment</p>
                </div>
              <% end %>
              <div class="users-online">
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-map" />
              </div>
              </div>
        </div>
    </div>
</div>
