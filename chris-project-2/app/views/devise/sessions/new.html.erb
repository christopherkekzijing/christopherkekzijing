<div class="container_orange_login orange">
  <div class="container header-index text-center">
    <%= image_tag ("logo-2.png"), class: "logo-2-login mb-3" %>
    <div class="line">
      <div class="hline-2"></div>
    </div>
    <h3>Get the live info around you!</h3>
  </div>
</div>

<div class="container login-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: "Email Address",
                  class: "email_input",
                  placeholder: "mike@gmail.com",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  placeholder: "Password",
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Login", class: "btn btn-primary w-100 mt-3 mb-2" %>
    </div>
  <% end %>
  <div class="forgot_password_container">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot_password" %>
  </div>
  <div class="or_section d-flex align-items-center">
    <div class="hline"></div>
    <p>or</p>
    <div class="hline"></div>
  </div>

  <div class="signup">
    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary w-100 mt-3 mb-2" %><br />
    <% end %>
  </div>

</div>
